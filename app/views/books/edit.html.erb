

<div class="container">
  <div class="w-50 mx-auto">
    <h1 class="mb-4 text-start">Editing Book</h1>
    <% if @book.errors.any? %>
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @book do |f| %>
      <div class="mb-3">
        <p>Title</p>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-3">
        <p>Opinion</p>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div>
        <%= f.submit 'Update Book', class:"btn btn-success mt-3" %>
      </div>
    <% end %>

    <div class="mt-3 text-">
      <%= link_to 'Show', book_path(@book) %> |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>