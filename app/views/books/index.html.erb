
<h4>User info</h4>
  <div>
    <%= image_tag 'sample-author1.jpg' %>
    <p>name<%= current_user.name %></p>
    <p>introduction: <%= current_user.introduction %></p>
  </div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
<h1>Books</h1>
  <div>
    <%= image_tag 'sample-author1.jpg' %>
    <p>Title<%= link_to book.title, book_path(book.id) %></p>
    <p>Opinion:<%= book.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
<% end %>